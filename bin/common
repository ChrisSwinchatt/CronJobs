#!/bin/bash

TODAY=$(date '+%Y-%m-%d')
LOG_BASE="/var/log/cronjobs"
LOG_DIR="${LOG_BASE}/${TODAY}"
mkdir -p "${LOG_DIR}"

NAME=$(basename "$0")
LOG_FILE="${LOG_DIR}/${NAME%.*}.log"

if [[ -z $NOLOG ]]; then
    touch "${LOG_FILE}"
    chmod 0666 "${LOG_FILE}"
fi

function log {
    echo "${NAME}: $*" | tee -a "${LOG_FILE}"
}
